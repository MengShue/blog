  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container">
        <%= link_to "FindOutMore", root_path, class: "navbar-brand"%>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <%= link_to "Home", root_path, class:"nav-link active", aria: {current: "page"} %>
            </li>
            <li class="nav-item">
              <%= link_to "FB", "https://www.facebook.com/meng.shue/", class:"nav-link"%>
            </li>
            <li class="nav-item">
              <% if user_signed_in? %>
                <%= link_to current_user.email, destroy_user_session_path, data: {turbo_method: :delete}, class:"nav-link" %>
              <% else %>
                <%= link_to "login", new_user_session_path, method: :get,class:"nav-link" %>
              <% end %>
            </li>
